/** Bootstrap Variable Template */

$brand-primary:          {{ palette.primary.toHex()|raw }};
$brand-info:             {{ palette.info.toHex()|raw }};
$brand-success:          {{ palette.success.toHex()|raw }};
$brand-warning:          {{ palette.warning.toHex()|raw }};
$brand-danger:           {{ palette.danger.toHex()|raw }};

$font-family-sans-serif: {{ font.family.family|raw }};
$headings-font-family:   {{ font.heading_family.family|raw }};

$font-size-base:         {{ font.base_size|raw }};

$text-color:             {{ font.text_color.toHex()|raw }};
$body-bg:                {{ font.body_color.toHex()|raw }};
$link-color:             {{ palette.primary.toHex()|raw }};

$border-radius-base:     {{ presentation.border_radius|raw }};
$border-radius-large:    floor(($border-radius-base * 1.5));
$border-radius-small:    ceil(($border-radius-base * 0.75));

{% if font.family.url %}
@import url({{ font.family.url }});
{% endif %}

{% if font.heading_family.url %}
@import url({{ font.heading_family.url }});
{% endif %}

$state-success-text:             hsl(hue($brand-success), lightness($brand-success), 30%);
$state-success-bg:               hsl(hue($brand-success), lightness($brand-success), 92%);
$state-success-border:           darken(adjust-hue($state-success-bg, -10), 5%);

$state-info-text:                hsl(hue($brand-info), lightness($brand-info), 30%);
$state-info-bg:                  hsl(hue($brand-info), lightness($brand-info), 92%);
$state-info-border:              darken(adjust-hue($state-info-bg, -10), 7%);

$state-warning-text:             hsl(hue($brand-warning), lightness($brand-warning), 30%);
$state-warning-bg:               hsl(hue($brand-warning), lightness($brand-warning), 92%);
$state-warning-border:           darken(adjust-hue($state-warning-bg, -10), 5%);

$state-danger-text:              hsl(hue($brand-danger), lightness($brand-danger), 30%);
$state-danger-bg:                hsl(hue($brand-danger), lightness($brand-danger), 92%);
$state-danger-border:            darken(adjust-hue($state-danger-bg, -10), 5%);

@import "_bootstrap.scss";
